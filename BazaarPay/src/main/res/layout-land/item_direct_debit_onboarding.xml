<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/bazaarpay_default_margin_quadruple">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        style="@style/Bazaar.Text.Headline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bazaarpay_default_margin"
        android:gravity="center"
        android:textColor="@color/bazaarpay_text_primary"
        tools:text="این تست آیتم های صفحه آن بردینگ هستش" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        style="@style/Bazaar.Text.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bazaarpay_default_margin"
        android:gravity="center"
        android:textColor="@color/bazaarpay_text_primary"
        tools:text="این تست آیتم های صفحه آن بردینگ هستش" />

</LinearLayout>