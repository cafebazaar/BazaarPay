<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:gravity="center"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/Bazaar.Image.Toolbar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_user_account_icon_secondary_24dp_old" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/forceLoginViewTitle"
        style="@style/Bazaar.Text.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin_triple"
        android:layout_marginTop="@dimen/default_margin_double"
        android:gravity="center"
        android:text="@string/title_force_login"
        android:textColor="@color/text_primary" />

    <ir.cafebazaar.bazaarpay.widget.button.BazaarButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_double"
        app:buttonTheme="contained"
        app:buttonType="app"
        app:text="@string/login" />
</merge>